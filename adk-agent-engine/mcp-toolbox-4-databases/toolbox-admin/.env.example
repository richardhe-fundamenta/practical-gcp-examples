# GCP Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1

# BigQuery Registry Configuration
REGISTRY_DATASET=example_mcp_toolbox_4_dbs
REGISTRY_TABLE=query_registry

# MCP Toolbox Configuration
TOOLBOX_PORT=8080
TOOLBOX_ADDRESS=0.0.0.0

# Google Cloud Storage (optional, for advanced configurations)
BUCKET_NAME=your-toolbox-configs-bucket

# Service Account (for local development)
# In production, use Workload Identity or instance service accounts
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Logging Configuration
LOG_LEVEL=INFO

# Optional: BigQuery Source Name
BIGQUERY_SOURCE_NAME=bigquery-source

# Optional: Cloud Run Configuration (used by deployment scripts)
CLOUD_RUN_SERVICE_NAME=toolbox
CLOUD_RUN_REGION=us-central1
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_CPU=1
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_TIMEOUT=300s
CLOUD_RUN_CONCURRENCY=80

# Optional: Container Registry
CONTAINER_REGISTRY=gcr.io
IMAGE_NAME=toolbox-admin
IMAGE_TAG=latest

# Optional: Development Mode
DEV_MODE=false

# Admin UI Configuration
ADMIN_PORT=8081
